---
import Container from "../container/container.astro";
import Link from "../link/link.astro";
---

<div class="main-container">
  <Container>
    <div class="wrapper">
      <h1>Angelo Zambrano</h1>
      <h2>
        Software Engineer at

        <Link
          data-tooltip="Ubidots is a cloud IoT platform offering tools for data collection, analysis, and visualization to quickly turn sensor data into insights."
          class="with-tooltip"
          color="success"
          href="https://www.ubidots.com"
        >
          Ubidots
        </Link>
      </h2>
    </div>
  </Container>
</div>

<style>
  .main-container {
    border-bottom: 1px solid var(--color-accents-2);
  }

  .wrapper {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    min-height: min(100dvh, 700px);
    gap: 1rem;
  }

  h1 {
    font-size: 3.5rem;
    margin: 0;
    text-align: center;
    font-weight: 800;
    color: var(--color-accents-7);
    padding: 0;
  }

  h2 {
    font-size: 1.5rem;
    font-weight: 100;
    text-align: center;
    color: var(--color-accents-5);
    margin: 0;
    padding: 0;
  }

  @media screen and (max-width: 1024px) {
    h1 {
      font-size: 3rem;
    }

    h2 {
      font-size: 1.25rem;
    }

    .wrapper {
      min-height: min(100dvh, 500px);
    }
  }

  @media screen and (max-width: 640px) {
    h1 {
      font-size: 1.5rem;
    }

    h2 {
      font-size: 1rem;
    }

    .wrapper {
      min-height: min(100dvh, 400px);
    }
  }

  @media screen and (max-width: 320px) {
    h1 {
      font-size: 1rem;
    }

    h2 {
      font-size: 0.75rem;
    }

    .wrapper {
      min-height: min(100dvh, 300px);
    }
  }
</style>
